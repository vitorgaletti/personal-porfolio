{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-plusplus": "off",
    "no-unused-vars": "off",
    "no-undef": "off",
    "func-names": "off",
    "no-use-before-define": "off",
    "prettier/prettier": ["error", { "singleQuote": true }]
  },
  "settings": {
    "import/extensions": [".js"]
  }
}
